<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPowerUpView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutFirstHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:id="@+id/selectedUpgrade"
            app:cpb_background_progressbar_color="#FFCDD2"
            app:cpb_background_progressbar_width="4dp"
            app:cpb_progressbar_color="#F44336"
            app:cpb_progressbar_width="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:elevation="2dp"
            />

        <ImageView
            android:id="@+id/ivSelectedPowerUp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@color/colorAccent"
            android:layout_alignTop="@+id/selectedUpgrade"
            android:layout_alignLeft="@+id/selectedUpgrade"
            android:layout_alignRight="@+id/selectedUpgrade"
            android:layout_alignBottom="@+id/selectedUpgrade"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/bBuy"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/ivSelectedPowerUp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shopokvir"
            android:text="BUY"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>


<RelativeLayout
    android:id="@+id/relativeLayoutSecondHalf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/relativeLayoutFirstHalf"
    android:layout_alignBottom="@+id/relativeLayoutFirstHalf"
    android:layout_alignTop="@+id/relativeLayoutFirstHalf">


    <RelativeLayout
        android:id="@+id/framePrice"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_red_light"
        android:background="@drawable/shopokvir"
        >

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="1000"
            android:textSize="16dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivPrice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tvPrice"
            android:layout_alignBottom="@+id/tvPrice"
            android:background="@drawable/atomcrvena"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/framePrice"
        android:layout_alignRight="@+id/framePrice"
        android:layout_below="@+id/framePrice"
        android:layout_above="@+id/tvBeforeAfter"
        android:text="OPIS POWER UP-A"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="14dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvBeforeAfter"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/framePrice"
        android:layout_alignRight="@+id/framePrice"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="5 > 7"
        android:textSize="18dp"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/lineBAleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@+id/framePrice"
        android:layout_marginLeft="6dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/holo_red_light"
        android:background="@drawable/linija2kratka">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lineBARight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="6dp"
        android:layout_alignRight="@+id/framePrice"
        android:backgroundTint="@android:color/holo_red_light"
        android:background="@drawable/linija2kratka">

    </FrameLayout>


</RelativeLayout>

    <FrameLayout
        android:id="@+id/lineImage"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:background="@drawable/linija1duga">

    </FrameLayout>

</RelativeLayout>