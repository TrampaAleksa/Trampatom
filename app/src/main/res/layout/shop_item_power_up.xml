<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutShopItem">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/upgradeProgress"
        android:layout_alignLeft="@+id/upgradeProgress"
        android:layout_alignRight="@+id/upgradeProgress"
        android:layout_alignBottom="@+id/upgradeProgress"
        android:background="@drawable/atomnarandzasta" />



    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/upgradeProgress"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="14dp"
        android:elevation="2dp"
        app:cpb_background_progressbar_color="#FFCDD2"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="#F44336"
        app:cpb_progressbar_width="10dp" />


    <TextView
        android:id="@+id/tvCost"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/upgradeProgress2"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="28dp"
        android:gravity="center"
        android:rotation="-30"
        android:background="@android:color/white"
        android:text="300"/>


    <ImageView
        android:id="@+id/ivIcon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/upgradeProgress2"
        android:layout_alignLeft="@+id/upgradeProgress2"
        android:layout_alignRight="@+id/upgradeProgress2"
        android:layout_alignBottom="@+id/upgradeProgress2"
        android:background="@drawable/atomnarandzasta" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/upgradeProgress2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:elevation="2dp"
        android:layout_below="@+id/upgradeProgress"
        app:cpb_background_progressbar_color="#FFCDD2"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="#F44336"
        app:cpb_progressbar_width="10dp" />

    <TextView
        android:id="@+id/tvCost2"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/upgradeProgress"
        android:background="@android:color/white"
        android:rotation="-30"
        android:gravity="center"
        android:text="300"/>



</RelativeLayout>